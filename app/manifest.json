{
  "manifest_version": 2,
  "name": "RTU.fm",
  "description": "RTU.fm - Le Grand Mix",
  "version": "1.0.0",
  "icons": {
    "128": "images/icon-128.png"
  },
  "permissions": [
    "http://*/"
  ],
  "background": {
    "scripts": [
      "build/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "RTU.fm",
    "default_popup": "popup.html",
    "default_icon": {
      "38": "images/icon-38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": ["content.js"]
    }
  ]
}
